<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @guides.last(3).each do |x| %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= x %>" class="<%= x == 0 ? 'active' : '' %>">
      <% end %>
  </ol>
  <div class="carousel-inner">
    <% @guides.last(3).each_with_index do |image_product, index| %>
      <div class="<%=  index == 0 ? 'carousel-item active' : 'carousel-item' %>">
        <% image_product.pictures.each do |x|%>
          <%= image_tag x.url,class:"d-block w-100"%>
        <% end %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

</div>
