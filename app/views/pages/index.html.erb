<div class='album'>
  <div class='container'>
    <h1 class="d-flex justify-content-center">New Guides</h1>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <% @guides.last(3).each do |x| %>
          <li data-target="#carouselExampleIndicators" data-slide-to="<%= x %>" class="<%= x == 0 ? 'active' : '' %>">
          <% end %>
      </ol>
      <div class="carousel-inner">
        <% @guides.last(3).each_with_index do |image, index| %>
          <div class="<%=  index == 0 ? 'carousel-item active' : 'carousel-item' %>">
            <% image.pictures.last(1).each do |x|%>
              <%= image_tag x.url, class:"d-block w-100"%>
            <% end %>
            <div class="carousel-caption d-none d-md-block">
              <h5><%= image.hero%></h5>
              <p><%=strip_tags(image.text)[0..110]%></p>
              <p><%= link_to "More", guide_path(image.id), style:"text-decoration:none; color:white;"%></p>
            </div>
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>

    </div>

  </div>
</div>
