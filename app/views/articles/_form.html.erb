<% if @article.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h2>У нас
      <%= pluralize(@article.errors.count, "error") %>(проблєми), Джоні</h2>

    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= tinymce %>
<div class="form-group">
  <%= f.text_field :title, class:"input", placeholder:"title",class:"form-control"%><br>
</div>
<div class="form-group">
  <%= f.text_area :body,:class => "tinymce", :rows => 10, :cols => 40 %><br>
</div>

